<%= render 'partials/category_nav_bar' %>
<h3 class="text-center"id="cat-header"><%= @category.name%></h3>
<div class="row">
  <% @category.items.each do |item| %>
    <div class="col-sm-3 text-center">
      <%= link_to image_tag(item.image, size: "100"), item %>
      <figcaption><%= link_to item.title, item_path(item) %></figcaption>
      <div id=<%= "net-button-#{item.id}" %>>
        <%= button_to "Add to cart", cart_items_path(item_id: item), class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
