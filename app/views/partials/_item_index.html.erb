
<div class= "container disaster-background image-responsive">
  <h1 class= "values" > Droply Supplies</h1>
</div>


<div class= "container fluid ">
  <div class = 'row well'>
    <h1 class="team text-center">Featured Supplies</h1>
    <% @items.first(3).each do |item| %>
      <div class="col-md-4 text-center">
        <% if current_user.nil? || !current_user.admin?%>
          <% @item_show = item_path(item)  %>
        <% else %>
          <% @item_show = admin_item_path(item) %>
        <% end %>
        <%= link_to image_tag('big_supply.png'), @item_show, class: "img-responsive"%>
        <p><%= item.description %></p>
      </div>
    <% end %>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-4 text-center item">
        <% if current_user.nil? || !current_user.admin?%>
          <% @item_show = item_path(item)  %>
        <% else %>
          <% @item_show = admin_item_path(item) %>
        <% end %>
        <%= link_to image_tag(item.image, size: "200"), @item_show %>
        <figcaption><%= link_to item.title, @item_show %></figcaption>
        <% if current_user.nil? || !current_user.admin?%>
          <div id=<%= "net-button-#{item.id}" %>>
            <%= button_to "Add to cart", cart_items_path(item_id: item), class: "btn btn-success" %>
          </div>
        <% else %>
          <div>
            <%= link_to "Edit", edit_admin_item_path(item), class: "btn btn-success", id: "btn-edit" %>
            <%= link_to "Delete", admin_item_path(item), class:"btn btn-danger", id: "btn-delete", method: :delete %>
          </div>
        <% end %>
      </div>
    <% end %>
    <% unless current_user.nil? || !current_user.admin?%>
      <%= link_to "Create Item", new_admin_item_path, class: "btn btn-success", id: "create-button" %>
    <% end %>
  </div>
</div>
