<div id="edit-personal-info">
  <%= form_for(@user) do |f| %>
    <div class="form-group">
      <%=f.label  "name" %>
      <%= f.text_field :full_name, placeholder: "name", class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.label "display name" %> <em>(*optional)</em>
      <%= f.text_field :display_name, placeholder: "display name", class: "form-control"  %>
    </div>
    <div class="form-group">
      <%=f.label "Email address" %> <em class ="team">(*required for checkout)</em>
      <%= f.text_field :email, placeholder: "email", class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.label "Password" %>
      <%= f.password_field :password, placeholder: "password", class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.label "Location" %>
      <%= f.text_field :location, placeholder: "city & state", class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label "Profile Image Url" %>
      <%= f.text_field :image, placeholder: "image url", class: "form-control" %>
    </div>
    <div class = "text-center">
      <%= f.submit "update personal information", class: "btn btn-tour navbar-btn", id: "sign-in"%>
    </div>
  <% end %>
</div>
